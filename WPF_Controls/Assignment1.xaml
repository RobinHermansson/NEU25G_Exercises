<Window x:Class="WPF_Controls.Assignment1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Controls"
        mc:Ignorable="d"
        Title="Assignment1" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label Content="Click the below button and it will count how many times you've clicked it."/>
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="ClickerButton" Content="Click me!!" Click="ClickerButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
